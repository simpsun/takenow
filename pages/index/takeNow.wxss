/* pages/index/takeNow.wxss */
.dialog {
	position: relative;
	display: inline-block;
	vertical-align: middle;
	margin-left: auto;
	margin-right: auto;
	width: 500rpx;
	max-width: 100%;
	background-color: #f8f8f8;
	border-radius: 10rpx;
	overflow: hidden;
}
.btnWidth{
	width: 120rpx;
}
.takenowBg {
  display: flex;
  flex-direction: column;
  background: var(--gradualRed);
  width: 100%;
  height: 200rpx;
  margin-bottom: 50rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.goodsInfo {
  position: absolute;
  top: 180rpx;
  width: 90%;
  margin-left: 5%;
}

.goodsInput {
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}

.remarkInput {
  text-align: right;
}

.goodsRemark {
  border-top-right-radius: 0;
  border-top-left-radius: 0;
  width: 90%;
  margin-left: 5%;
}

.goodsAddress {
  margin-top: 30rpx;
  background-color: white;
  border-radius: 16rpx;
}

.goodsAddressType {
  text-align: justify;
  margin: 10rpx 30rpx 0 30rpx;
  font-size: 30rpx;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
}
.goodsPurchaseAddressTitle {
  text-align: justify;
  margin-left: 30rpx;
  font-size: 30rpx;
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
}
.goodsAddressSelected {
  margin-top: 10rpx;
		padding: 0;
  min-height: 40rpx;
}
.goodsPurchaseAddressButton{
	padding: 0;
	
  min-height: 40rpx;
	position:absolute;
	right: 0;
	width: 74%;
	
}
.remarkText {
  text-align: justify;
  padding-right: 30rpx;
  font-size: 30rpx;
  position: relative;
  height: 35rpx;
  line-height: 35rpx;
	margin-left:175rpx;


}
.goodsPurchaseAddressText{
  text-align: justify;
  font-size: 30rpx;
  position: relative;
  height: 40rpx;
  line-height: 40rpx;
}
radio::before {
  font-family: "cuIcon";
  content: "\e645";
  position: absolute;
  color: var(--white) !important;
  top: 40%;
  margin-top: -8rpx;
  right: 5rpx;
  font-size: 24rpx;
  line-height: 12px;
  pointer-events: none;
  transform: scale(1, 1);
  transition: all 0.3s ease-in-out 0s;
  z-index: 9;
}

radio .wx-radio-input {
  /* 控制圆的大小 */
  margin: 0;
  width: 12px;
  height: 12px;
}
.desAddress{
width: 100%;
}
.remarkTextPlaceholder{
	font-size: 30rpx;
}
.desAddressButton::after {
   border: none;
   border-radius: 0;
}
.swithTakeStyle{
  position: relative;
  top: 600rpx;
  border: #666666 solid 2rpx;
  border-radius: 48rpx;
  width: 60%;
  margin: auto;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  padding: 0;
}
.switchTakeBtn{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-radius: 48rpx;
  width: 50%;


}