page{
  padding:100rpx 0;
}
.topStatusBar {
  width: 100%;
  height: 100rpx;
  position: fixed;
  top: 0;
  z-index: 1000;
}

.goodInfoBar {
  width: 94%;
  margin: 20rpx auto;
  border-radius: 20rpx;
}

.goodInfoText {
  padding: 20rpx;
}

.addrBar {
  border-radius: 20rpx;
  width: 94%;
  background: white;
  margin: auto;
}

.addrTag {
  width: 100%;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 30rpx;
}

.addrSet {
  height: 135rpx;
  margin: 10rpx 0;
}

.iconText {
  width: 70rpx;
  text-align: center;
}

.attrBar{
  width: 94%;
  margin:30rpx auto;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}
.attrTextL{
  width: 23%;
}
.attrTextR{
  width: 77%;
}
.bottomBar{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
align-items: center;
justify-content: flex-end;
}
.bBtn{
  margin: 0 15rpx;
  width: 180rpx;
  height: 80rpx;
  background:var(--greys);
  border-radius: 20rpx;
  color: white
}