.takeCodeBar{
  height: 400rpx;
  width: 90%;
border-radius: 30rpx;

}
.takeCodeBar .title{
  height: 30%;
  top: 0;
  width: 100%;
  font-size: 48rpx;
  position: relative;
  background: white;
  padding-top: 30rpx;
}
.takeCodeBar .title .icon{
  position: absolute;
  top: 40rpx;
  right:20rpx;
}
.takeCodeBar .takeCodeContent{
  height:70%;
  width: 100%;
background: white;
}
 .nums {
   padding-top: 50rpx;
   margin:0 auto;
  display: flex;
  justify-content: center;
  height: 120rpx;
  width: 90%;
  font-size: 60rpx;
	color: #17233d;
}
 .nums>input {
  width: 90rpx;
  height: 84rpx;
  
  margin-right: 20rpx;
  border-bottom: 1rpx solid #17233d;
  text-align: center;
  line-height: 84rpx;
}

.nums>input:nth-last-of-type(2) {
  margin-right: 0;
}
.nums>input.hidden-input {
  width: 0;
  height: 0;
  border: none;
  margin: 0;
}

 .tip {

  margin-top: 50rpx;
	font-size: 24rpx;
	color: #fe4d62;
}