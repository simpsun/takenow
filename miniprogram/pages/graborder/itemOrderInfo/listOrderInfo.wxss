/* pages/graborder/itemOrderInfo/listOrderInfo.wxss */

page {
  padding-bottom: 100rpx;
}
.topStatusBar {
  width: 100%;
  height: 200rpx;
  position: fixed;
  top: 0;
  z-index: 1000;
}
.goodInfoBar {
  width: 94%;
  margin: 20rpx auto;
  margin-top: 220rpx;
  border-radius: 20rpx;
}
.goodInfoText {
  padding: 20rpx;
}
.addrBar {
  border-radius: 20rpx;
  width: 94%;
  background: white;
  margin:0 auto 50rpx auto;
}

.addrTag {
  width: 100%;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 30rpx;
}

.addrSet {
  height: 135rpx;
  margin: 10rpx 0;
}

.iconText {
  width: 70rpx;
  text-align: center;
}

.attrBar {
  bottom: 30rpx;
  width: 94%;
  margin: 30rpx auto;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}

.attrTextL {
  width: 23%;
}

.attrTextR {
  width: 77%;
 text-align: right;
}

.bottomBar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx;
}

.bBtn {
  margin: 0 15rpx;
  width: 180rpx;
  height: 80rpx;
  background: var(--greys);
  border-radius: 20rpx;
  color: white;
}

.timeTag {
  position: relative;
  left: 20rpx;
}
.botHead{
width: 100%;
height: 60rpx;
border-bottom: 3rpx solid var(--greyn);
background: white;
padding: 10rpx 0;

}