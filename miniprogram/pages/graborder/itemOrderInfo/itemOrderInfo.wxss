/* pages/graborder/itemOrderInfo/itemOrderInfo.wxss */

page {
  padding-bottom: 110rpx;
}

.rewardBar {
  width: 100%;
  top: 0;
  height: 120rpx;
  background-color: var(--tnRed);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  z-index: 1000;
}

.attrBox {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0;
}
.attrBar {
  border-radius: 20rpx;
  margin: 0;
  background: white;
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
}

.attrHead {
  color: black;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  position: relative;
  top: 40rpx;
}
.attrTag {
  display: inline-flex;
  background-color: var(--greyn);
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 10rpx;
  margin: 10rpx;
  width: 29%;
  height: 90rpx;
  border-radius: 10rpx;
}

.navDetails {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 90rpx;
  background-color: white;
  position: fixed;
  top: 120rpx;
  z-index: 1000;
}

.navDetails .navBtn {
  background-color: var(--green);
  border-radius: 16rpx;
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
}

.bottomGrabOrderBar {
  position: fixed;
  bottom: 0rpx;
  
  width: 100%;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.grabOrderDetails {
  background-color: var(--tnRed);
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  color: white;
  border-radius: 20rpx;
  height: 100%;
}

.addrBox {
  margin: 30rpx 0;
  width: 100%;
  display: flex;
  justify-content: center;
}

.addrBar {
  border-radius: 20rpx;
  width: 80%;
  height: 450rpx;
  background: white;
}

.addrTag {
  width: 100%;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding-left: 30rpx;
}

.addrSet {
  height: 140rpx;
  margin: 10rpx 0;
}

.iconText {
  width: 70rpx;
  text-align: center;
}

.dialogBtn {
  width: 40%;
  height: 100%;
}

.takeCodeBar {
  height: 400rpx;
  width: 90%;
  border-radius: 30rpx;
}

.takeCodeBar .title {
  height: 30%;
  top: 0;
  width: 100%;
  font-size: 48rpx;
  position: relative;
  background: white;
  padding-top: 30rpx;
}

.takeCodeBar .title .icon {
  position: absolute;
  top: 40rpx;
  right: 20rpx;
}

.takeCodeBar .takeCodeContent {
  height: 70%;
  width: 100%;
  background: white;
}

.nums {
  padding-top: 50rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  height: 120rpx;
  width: 90%;
  font-size: 60rpx;
  color: #17233d;
}

.nums>input {
  width: 90rpx;
  height: 84rpx;
  margin-right: 20rpx;
  border-bottom: 1rpx solid #17233d;
  text-align: center;
  line-height: 84rpx;
}

.nums>input:nth-last-of-type(2) {
  margin-right: 0;
}

.nums>input.hidden-input {
  width: 0;
  height: 0;
  border: none;
  margin: 0;
}

.tip {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #fe4d62;
}

.takeCodeContent .bottom {
  position: absolute;
  bottom: 20rpx;
  left: 10%;
  font-size: 24rpx;
  width: 80%;
  color: var(--grey);
}

.optBtn {
 background: #f0f0f0;
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.attrTextL {
  width: 23%;
}

.attrTextR {
  width: 77%;
 text-align: right;
}
.orderDetail {
  bottom: 30rpx;
  width: 80%;
  margin: 0 auto 20rpx auto;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
}